@page
@model AuditApplication.Pages.Audits.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Audit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Audit.TemplateId" class="control-label"></label>
                <select asp-for="Audit.TemplateId" class ="form-control" asp-items="ViewBag.TemplateId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Audit.StartDate" class="control-label"></label>
                <input asp-for="Audit.StartDate" class="form-control" />
                <span asp-validation-for="Audit.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Audit.CompletionDate" class="control-label"></label>
                <input asp-for="Audit.CompletionDate" class="form-control" />
                <span asp-validation-for="Audit.CompletionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Audit.TemplateId" class="control-label"></label>
                <select asp-for="Audit.TemplateId" class="form-control">
                    @foreach (var template in Model.AvailableTemplates)
                    {
                        <option value="@template.Id">@template.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

